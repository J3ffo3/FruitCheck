<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FruitChecker" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/verde</item>
        <item name="colorPrimaryVariant">@color/verde_oscuro</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/verde</item>
        <item name="colorSecondaryVariant">@color/verde_oscuro</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:headerBackground" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="ScreenBackground"><item name="android:background">@color/black</item></style>
    <style name="CardBackground"><item name="android:background">@color/verde_oscuro</item></style>
    <style name="TabIndicator">
        <item name="android:background">@color/black</item>
        <item name="tabBackground">@drawable/indicator_dark</item>
    </style>
    <style name="TextTitleColor"><item name="android:textColor">@color/verde</item></style>
    <style name="TextColor"><item name="android:textColor">@color/black</item></style>
    <style name="ImageChangeLogo"><item name="android:src">@drawable/logo_dark</item></style>
    <style name="ImageChangeSep"><item name="android:src">@drawable/terminacion_dark</item></style>
    <style name="ImageChangeTP"><item name="android:src">@drawable/take_pic_dark</item></style>
    <style name="ImageChangeLG"><item name="android:src">@drawable/add_photo_dark</item></style>
    <style name="ImageChangeLC"><item name="android:src">@drawable/live_dark</item></style>
    <style name="ImageChangeH"><item name="android:src">@drawable/historial_dark</item></style>

</resources>