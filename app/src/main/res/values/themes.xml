<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FruitChecker" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/verde</item>
        <item name="colorPrimaryVariant">@color/verde_claro</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/verde</item>
        <item name="colorSecondaryVariant">@color/verde_claro</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.FruitChecker" parent="Base.Theme.FruitChecker" />

    <style name="ScreenBackground"><item name="android:background">@color/white</item></style>
    <style name="CardBackground"><item name="android:background">@color/verde_claro</item></style>
    <style name="TabIndicator">
        <item name="android:background">@color/white</item>
        <item name="tabBackground">@drawable/indicator_clear</item>
    </style>
    <style name="TextTitleColor"><item name="android:textColor">@color/verde</item></style>
    <style name="TextColor"><item name="android:textColor">@color/white</item></style>
    <style name="ImageChangeLogo"><item name="android:src">@drawable/logo_clear</item></style>
    <style name="ImageChangeSep"><item name="android:src">@drawable/terminacion_clear</item></style>
    <style name="ImageChangeTP"><item name="android:src">@drawable/take_pic_clear</item></style>
    <style name="ImageChangeLG"><item name="android:src">@drawable/add_photo_clear</item></style>
    <style name="ImageChangeLC"><item name="android:src">@drawable/live_clear</item></style>
    <style name="ImageChangeH"><item name="android:src">@drawable/historial_clear</item></style>





</resources>